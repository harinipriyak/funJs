  
{
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "public"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"dawnJs - Nodemon\"'"
    },
    "watch": [
      "app",
      "client",
      "config",
      "views",
      "server.js"
    ],
    "env": {
      "NODE_ENV": "local"
    },
    "ext": "js json hbs html scss css"
  }